<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>encrypterBean</managed-bean-name>
		<managed-bean-class>controller.EncrypterBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>controller.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>decrypterBean</managed-bean-name>
		<managed-bean-class>controller.DecrypterBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
	<from-view-id>home.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>nousername</from-outcome>
		<to-view-id>user-not-found.xhtml</to-view-id>
	</navigation-case>
		<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>invalidpassword</from-outcome>
		<to-view-id>invalid-password.xhtml</to-view-id>
	</navigation-case>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>success</from-outcome>
		<to-view-id>options.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>

	<navigation-rule>
	<from-view-id>user-not-found.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>nousername</from-outcome>
		<to-view-id>user-not-found.xhtml</to-view-id>
	</navigation-case>
		<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>invalidpassword</from-outcome>
		<to-view-id>invalid-password.xhtml</to-view-id>
	</navigation-case>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>success</from-outcome>
		<to-view-id>options.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
	<from-view-id>invalid-password.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>nousername</from-outcome>
		<to-view-id>user-not-found.xhtml</to-view-id>
	</navigation-case>
		<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>invalidpassword</from-outcome>
		<to-view-id>invalid-password.xhtml</to-view-id>
	</navigation-case>
	<navigation-case>
		<from-action>#{loginBean.queryDBAndLogin()}</from-action>
		<from-outcome>success</from-outcome>
		<to-view-id>options.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
		
</faces-config>
